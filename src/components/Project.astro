---
const { projectName, projectLink, projectDescription, imageUrl } = Astro.props;
---
<style>
    .project-card {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
    }

    .project-name {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .project-link {
        color: #0070f3;
        text-decoration: none;
    }

    .project-desc {
        color: #555;
    }

    .project-image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        display: flex;
    }

    .project-image {
        object-fit: cover;
        max-width: 100%;
        max-height: 100%;
    }

    .image-title-container {
        display: flex;
        flex-direction: row;
    }
    
</style>

<div class="project-card">
    
    <div class="image-title-container">
        <h3 class="project-name">{projectName}</h3>

        <div class="project-image-container" >
            <img src={imageUrl} alt={projectName} class="project-image" />
        </div>
    </div>

    <a href={projectLink} class="project-link">View Github</a>
    <p class="project-desc">{projectDescription}</p>
</div>